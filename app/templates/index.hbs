<EsHeader />

<main>
  <section class="container">
    <h1 class="es-heading">Upgrade Guide</h1>

    <p>From version</p>
    <PowerSelect
      @searchEnabled={{true}}
      @options={{this.versions}}
      @selected={{this.fromVersion}}
      @onChange={{fn (mut this.fromVersion)}}
      as |version|
    >
      {{version}}
    </PowerSelect>
    <br />

    <p>To version</p>
    <PowerSelect
      @searchEnabled={{true}}
      @options={{this.versions}}
      @selected={{this.toVersion}}
      @onChange={{fn (mut this.toVersion)}}
      as |version|
    >
      {{version}}
    </PowerSelect>


    <h2>Upgrading from {{this.fromVersion}} to {{this.toVersion}}</h2>
    <CliUpdateCommands
      @toVersion={{this.toVersion}}
    />

    <h2>Ember.js</h2>
    <ListFeaturesDeprecations
      @datum={{this.model.emberJSChanges}}
      @fromVersion={{this.fromVersion}}
      @toVersion={{this.toVersion}}
    />

    <h2>Ember Data</h2>
    <ListFeaturesDeprecations
      @datum={{this.model.emberDataChanges}}
      @fromVersion={{this.fromVersion}}
      @toVersion={{this.toVersion}}
    />

    <h2>Ember CLI</h2>
    <ListFeaturesDeprecations
      @datum={{this.model.emberCLIChanges}}
      @fromVersion={{this.fromVersion}}
      @toVersion={{this.toVersion}}
    />
  </section>
</main>

<EsFooter />